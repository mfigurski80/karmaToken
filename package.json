{
  "name": "karmaToken",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "truffle compile --all",
    "dev": "truffle dev > /dev/null &",
    "test": "truffle test",
    "coverage": "truffle run coverage",
    "lint": "solhint contracts/*.sol contracts/**/*.sol",
    "appdev": "snowpack dev",
    "appbuild": "snowpack build",
    "report-addresses": "truffle network --clean && truffle network > testnet_addresses.txt",
    "deploy-testnet": "DEPLOY_SUPPORTING_CONTRACTS='Y' truffle migrate --network test; npm run report-addresses"
  },
  "author": "",
