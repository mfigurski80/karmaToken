  "dependencies": {
    "@openzeppelin/contracts": "^4.2.0",
    "truffle-hdwallet-provider": "^1.0.17"
  },
  "devDependencies": {
    "dotenv": "^16.0.1",
    "eth-gas-reporter": "^0.2.22",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "truffle": "^5.5.3",
    "truffle-assertions": "^0.9.2",
    "truffle-contract-size": "^2.0.1"
  }
}
